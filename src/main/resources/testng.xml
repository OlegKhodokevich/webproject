<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite" verbose="1">
    <test name="Test group user's validation.">
        <groups>
            <run>
                <include name="user_validation"/>
            </run>
        </groups>
        <classes>
            <class name="by.khodokevich.web.util.validator.UserDataValidatorFirstNameTest"/>
            <class name="by.khodokevich.web.util.validator.UserDataValidatorLastNameTest"/>
            <class name="by.khodokevich.web.util.validator.UserDataValidatorMailTest"/>
            <class name="by.khodokevich.web.util.validator.UserDataValidatorPhoneTest"/>
            <class name="by.khodokevich.web.util.validator.UserDataValidatorCityTest"/>
            <class name="by.khodokevich.web.util.validator.UserDataValidatorRegionTest"/>
            <class name="by.khodokevich.web.util.validator.UserDataValidatorPasswordTest"/>
            <class name="by.khodokevich.web.util.validator.UserDataValidatorRepeatPasswordTest"/>
            <class name="by.khodokevich.web.util.validator.UserDataValidator"/>
        </classes>
    </test>
    <test name="Test group order's validation.">
        <groups>
            <run>
                <include name="order_validation"/>
            </run>
        </groups>
        <classes>
            <class name="by.khodokevich.web.util.validator.OrderDataValidatorTitleTest"/>
            <class name="by.khodokevich.web.util.validator.OrderDataValidatorDescriptionTest"/>
            <class name="by.khodokevich.web.util.validator.OrderDataValidatorAddressTest"/>
            <class name="by.khodokevich.web.util.validator.OrderDataValidatorDateTest"/>
            <class name="by.khodokevich.web.util.validator.OrderDataValidatorSpecializationTest"/>
            <class name="by.khodokevich.web.util.validator.OrderDataValidator"/>
        </classes>
    </test>
</suite>